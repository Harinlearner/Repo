class Solution {
    public boolean checkValidString(String s) {
         
       int leftmin=0,leftmax=0;
       for(int i=0;i<s.length();i++)
       {
         if(s.charAt(i)=='(')
         {
            leftmin++;
            leftmax++;
         }
         else if(s.charAt(i)==')')
         {
            leftmax--;
            leftmin--;
         }
         else
         {
            leftmin--;
            leftmax++;
         }
         if(leftmin<0) leftmin=0;
         if(leftmax<0) return false;


       }
       return leftmin==0;
    }
}
